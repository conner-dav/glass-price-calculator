{
  "name": "glass-price-calculator",
  "version": "1.0.0",
  "description": "Glass Pricing Calculator Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build": "electron-builder"
  },
  "keywords": ["glass", "calculator", "pricing"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.glasscalculator.app",
    "productName": "Glass Price Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "icon.ico",
      "icon.png"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.png"
    },
    "nsis": {
      "installerIcon": "icon.png",
      "uninstallerIcon": "icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png"
    }
  }
}